generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Stack {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  image       String
  highlight   Boolean   @default(false)
  projects    Project[]

  @@map("stacks")
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  images      String[]
  level       Int
  type        String
  highlight   Boolean  @default(false)
  repository  String
  stacks      Stack[]

  @@map("projects")
}
